<h1> Photo Details </h1>

<dl>
  <dt>Image</dt>
  <dd>
    <img src="<%= @photo.image %>">
  </dd>

  <dt>Caption</dt>
  <dd>
    <p>
      <%= @photo.caption %>
    </p>
  </dd>

  <dt>Owner</dt>
  <dd><%= @photo.poster.username %></dd>

  <dt>Posted</dt>
  <dd><%= @photo.created_at %></dd>

  <dt>Edit photo</dt>
  <dd>
    <form action="/photo/edit/<%= @photo.id %>">
      <label for="image_url">Image</label>
      <input type="text" id="image_url" name="image" value="<%= @photo.image %>">

      <label for="image_caption">Caption</label>
      <textarea type="text" id="image_caption" name="image_caption_update" value="<%= @photo.caption %>"></textarea>

      <button type="submit">Update photo</button>
    </form>
  </dd>

  <dt>Delete photo</dt>
  <dd>
    <a href="/delete_photo/<%= @photo.id %>">
      Delete this photo
    </a> 
  </dd>
</dl>

<h2> Comments </h2>

<table>
  <tr>
    <th>Commenter</th>
    <th>Comment</th>
    <th>Posted</th>
  </tr>
  <% @photo.comments.each do |comment| %>
    <tr>
      <td><%= comment.commenter.username %></td>
      <td><%= comment.body %></td>
      <td><%= comment.created_at %></td>
    </tr>
  <% end %>
</table>

<h3> Add new comment </h3>

<form action="/comment/new">
  <label for="photo_id_new_comment">Photo ID</label>
  <input type="text" id="photo_id_new" name="photo_id_new_comment" value="<%= @photo.comments.length + 1 %>">

  <label for="commenter_id_new_comment">Author ID</label>
  <input type="text" id="commenter_id_new_comment" name="commenter_id_new_comment">

  <label for="new_comment_text">Comment</label>
  <textarea id="new_comment_text" name="new_comment_text_area" placeholder="Enter a comment..."></textarea>

  <button type="submit">Add comment</button>
</form>